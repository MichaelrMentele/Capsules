<!-- Add new capsules -->
<section id="add_capsules">
  <form  class="class" id="capsule_creator" action="/capsules" method="post">
    <dl>
      <dt>
        <label for="capsule_message">Share the Love:</label>
      </dt>
      <dd>
        <!-- !!! Our motto for messages is short and sweet... (limit to 100 characters) -->
        <textarea name="capsule_message" placeholder="I appreciate..."></textarea>
      </dd>
    </dl>
    
    <!-- message submission -->
    <div class="sidebyside">
      <!--Save as draft-->
      <fieldset class="actions">
        <input type="submit" value="Save to Drafts">
      </fieldset>
      <!-- Add to dispenser -->
      <fieldset class="actions ">
        <input type="submit" value="Add to dispenser">
      </fieldset>
    </div>
  </form> 
</section>
    
<!-- Display undispensed capsules collection -->
<section id="dispenser">
  <h2>Dispenser</h2>
  <ul>
    <% @capsules.each do |capsule| %>
      <li><%= capsule.message %></li>
    <% end %>
  </ul>
</section>

<!-- Display drafted messages -->
<section id="drafts">   
  <h1>Drafts</h1>
  <!--drafts to go here-->
  <p>example draft</p>
</section>

<!-- Display sent capsules -->
<section id="sent">
  <ul>
    <% @sent_messages.each do |sent_message| %>
      <li><%= sent_message %></li>
    <% end %>
  </ul>
</section>