<!-- user registration submission -->
<section id="registration">
  <h2>Register.</h2>
  <h3>pop your lover's capsule cherry ;)</h3>
  <br>
  <form action="/register" method="post">
    <dl>
      <!-- user info -->
      <dt>
        <label for="username">Username</label>
      </dt>
      <dd>
        <input name="username" placeholder="Seneca" type="text" value="">
      </dd>

      <dt>
        <label for="password">Password</label>
      </dt>
      <dd>
        <input name="password" placeholder="secret" type="text" value="">
      </dd>

      <!-- lover info -->
      <dt>
        <label for="lover_name">Lover Name</label>
      </dt>
      <dd>
        <input name="lover_name" placeholder="Seneca" type="text" value="">
      </dd>

      <dt>
        <label for="lover_phone">Lover Phone</label>
      </dt>
      <dd>
        <input name="lover_phone" placeholder="XOX OXO XOXO" type="phone" value="">
      </dd>
    </dl>

    <!-- Add new user -->
    <fieldset class="actions ">
      <input type="submit" value="Register">
    </fieldset>
  </form>
</section>
