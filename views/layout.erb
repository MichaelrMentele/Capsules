<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Capsules</title>
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
    <link rel="stylesheet" href="/stylesheets/grid.css">
    
    <link href='https://fonts.googleapis.com/css?family=Lobster+Two:700italic|Vollkorn:400,400italic' rel='stylesheet' type='text/css' ">
</head>

<body>
  <header>    
    <div class="header">
      <h1>Capsules</h1>
     <nav>
        <ul>
          <li><a href="user.html">Home</a></li>
          <li><a href="sent.html">Sent</a></li>
          <li><a href="settings.html">Settings</a></li>
        </ul>
      </nav>
    </div> 
  </header>

  <div>
    <div class="content">
      <!-- Display flash messages -->
      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>
      <% if session[:success] %>
        <div class="flash success">
          <p><%= session.delete(:success) %></p>
        </div>
      <% end %>

      <!-- Yield to specific page content -->
      <%= yield %>
    </div>
  </div>
  <script type="text/javascript" src="javascripts/ui.js"></script>
</body>
<footer>
  <nav>
    <ul>
      <li><a href="home.erb">Home</a></li>
      <li><a href="sent.html">Sent</a></li>
      <li><a href="settings.html">Settings</a></li>
      <li><a href="about.html">About</a></li>
    </ul>
  </nav>
</footer>
</html>